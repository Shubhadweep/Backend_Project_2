<%- include('../Includes/header.ejs')-%>
<link rel="stylesheet" href="/CSS/dashboard.css">
</head>
<body>
    <%- include('../Includes/navbar.ejs')-%>
    <main>
        <div class="upper d-flex justify-content-between align-items-center">
            <div class="headtext">
                <h1><i>Dashboard</i></h1>
            </div>
            
            <div class="button">
                <button class="btn btn-warning"><a href="/logout"><b>Log Out</b></a></button>
            </div>

        </div>
        
        <div class="container mt-5">
            <div class="row">
                <!-- Carousel Section -->
                <div class="col-md-6">
                    <h4>User Images</h4>
                    <div id="imageCarousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="/RegistrationImg/<%=data.Employee_Images[0]%>" class="d-block w-100" alt="Image 1">
                            </div>
                            <div class="carousel-item">
                                <img src="/RegistrationImg/<%=data.Employee_Images[1]%>" class="d-block w-100" alt="Image 2">
                            </div>
                            <div class="carousel-item">
                                <img src="/RegistrationImg/<%=data.Employee_Images[2]%>" class="d-block w-100" alt="Image 3">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#imageCarousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#imageCarousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <!-- Details Section -->
                <div class="col-md-6 details">
                    <h4>User Details</h4>
                    <h5>Full Name : <%=data.Full_Name%> </h5><br>
                    <h5>Email-ID : <%=data.Email%></h5><br>
                    <h5>Contact number :  <%=data.Phone%></h5><br>
                    <h5>Address : <%=data.Address%></h5><br>
                    <h5>State Name : <%=data.State_Name%></h5><br>
                    <h5>ZipCode : <%=data.Zip_Code%></h5><br>
                    <h5>Date Of Joining : <%=data.Date_of_Joining.toLocaleDateString("en-GB")%></h5><br>

                <div class="upper d-flex justify-content-between align-items-center">

                    <div class="button">
                        <button class="btn btn-danger"><a href="/deleteUserData/<%=data._id%>"><b>Delete</b></a></button>
                    </div>
                    <div class="button">
                        <button class="btn btn-warning"><a href="/viewEditDetails/<%=data._id%>"><b>Edit</b></a></button>
                    </div>
                </div>

                </div>
            </div>
        </div>
    




    </main>

<%- include('../Includes/footer.ejs')-%>